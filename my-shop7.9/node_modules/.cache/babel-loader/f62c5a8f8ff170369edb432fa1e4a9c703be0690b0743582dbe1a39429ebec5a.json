 <input v-model=\"password\" type=\"password\" placeholder=\"Пароль\">\r\n    <button @click=\"login\">Увійти</button>\r\n    <p v-if=\"message\" class=\"error\">{{ message }}</p>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      username: \"\",\r\n      password: \"\",\r\n      message: \"\",\r\n      users: []\r\n    };\r\n  },\r\n  async mounted() {\r\n    try {\r\n      const response = await fetch(\"/admin.json\"); // Переконайтеся, що файл доступний\r\n      if (!response.ok) {\r\n        throw new Error(`HTTP помилка: ${response.status}`);\r\n      }\r\n      this.users = await response.json();\r\n      console.log(\"Користувачі завантажені:\", this.users); // Лог для перевірки\r\n    } catch (error) {\r\n      console.error(\"Помилка завантаження JSON:\", error);\r\n      this.message = `Помилка сервера! Спробуйте пізніше. (${error.message})`;\r\n    }\r\n  },\r\n  methods: {\r\n    login() {\r\n      if (!this.username || !this.password) {\r\n        this.message = \"Введіть логін та пароль!\";\r\n        return;\r\n      }\r\n\r\n      if (!this.users || this.users.length === 0) {\r\n        this.message = \"Сервер не надав дані користувачів.\";\r\n        return;\r\n      }\r\n\r\n      const user = this.users.find(\r\n        (u) => u.username === this.username && u.password === this.password\r\n      );\r\n\r\n      if (user) {\r\n        console.log(\"Авторизація успішна:\", user); // Лог для перевірки\r\n        localStorage.setItem(\"authUser\", this.username);\r\n        this.$router.push(\"/admin\");\r\n      } else {\r\n        this.message = \"Невірний логін або пароль!\";\r\n      }\r\n    }\r\n  }\r\n};\r\n\r\n</script>\r\n\r\n<style>\r\n.login-container {\r\n  max-width: 300px;\r\n  margin: 50px auto;\r\n  display: flex;\r\n  flex-direction: column;\r\n  gap: 10px;\r\n}\r\ninput, button {\r\n  padding: 10px;\r\n  font-size: 16px;\r\n}\r\nbutton {\r\n  cursor: pointer;\r\n}\r\n.error {\r\n  co